.icon-text {
    display: flex;
    flex-direction: column;
    gap: 8px;
    align-items: center;
}

.text {
    color: #c3c3c3;
    font-size: 13px;
}

.icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background-color: #f7f7f7;
}
